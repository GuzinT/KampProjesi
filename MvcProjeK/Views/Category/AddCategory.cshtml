@model EntityLayer.Concrete.Category

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post)) //beginform; genellikle eklemeler,güncellemeler için kullanılan html yardımcısı.3 parametresi var;1-üzerinde çalıştığımız ekşın 2-üzerinde çalıştığımız controler 3-form metdoun değeri
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x=>x.CategoryName)   @*//inputtan daha kullanışlı otomatik doldurduğu için hata yapma oranı daha azdır.*@
        @Html.ValidationMessageFor(x=>x.CategoryName)
        <br /><br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextBoxFor(x=>x.CategoryDescription)
        @Html.ValidationMessageFor(x=>x.CategoryDescription)
        <br /><br />
        <button>Kaydet</button>
    </div>
}

